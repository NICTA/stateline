#[ -d ${BUILD_DIR}/json-master ] || unzip -o ${BUILD_DIR}/json-master.zip -d ${BUILD_DIR}
#cp ${BUILD_DIR}/json-master/src/json.hpp $PREREQ_DIR/include

#######################################
# simple-web-server
#######################################

wget -c https://github.com/eidheim/Simple-Web-Server/archive/master.zip -O ${BUILD_DIR}/simple-web-server-master.zip
[ -d ${BUILD_DIR}/simple-web-server-master ] || unzip -o ${BUILD_DIR}/simple-web-server-master.zip -d ${BUILD_DIR}
cp ${BUILD_DIR}/simple-web-server-master/server_http.hpp $PREREQ_DIR/include

