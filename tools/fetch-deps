#wget -P ${BUILD_DIR} -c http://download.zeromq.org/zeromq-4.0.3.tar.gz
#[ -d ${BUILD_DIR}/zeromq-4.0.3 ] || tar -xvf ${BUILD_DIR}/zeromq-4.0.3.tar.gz -C ${BUILD_DIR}
#cd ${BUILD_DIR}/zeromq-4.0.3
#./configure --prefix=$PREREQ_DIR
#make -j $N_PROCESSORS
#make install
#cd -
